{
  "name": "mentor-buddy-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development PORT=3000 tsx index.ts",
    "start": "node dist/index.js",
    "build": "npm ci --only=production && esbuild index.ts --bundle --platform=node --format=cjs --outdir=dist --minify --external:pg-native --external:path --external:fs --external:crypto",
    "build:fast": "esbuild index.ts --bundle --platform=node --format=cjs --outdir=dist --minify --external:pg-native --external:path --external:fs --external:crypto",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "db:setup": "tsx setup-db.ts"
  },
  "dependencies": {
    "@jridgewell/trace-mapping": "^0.3.25",
    "@neondatabase/serverless": "^0.10.4",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "memorystore": "^1.6.7",
    "nanoid": "^5.1.5",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "ws": "^8.18.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.13",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.30.4",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
